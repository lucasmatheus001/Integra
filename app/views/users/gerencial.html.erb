
  <div id="root">
    <div class="App background">
      <div id="db-wrapper">
        <div class="d-flex flex-column container">
          <div class="align-items-center justify-content-center g-0 min-vh-100 row">
            <div class="py-8 py-xl-0 col-lg-12 col-md-6">
              <div class="card">
                <div class="p-8 card-body">
                  <div class="row">
                    <div class="mb-4 col-lg-12 col-md-12">
                        <table class="table table-dark">
                          <thead>
                            <tr>
                              <th scope="col">id</th>
                              <th scope="col">user_name</th>
                              <th scope="col">user_role</th>
                              <th scope="col">user_status</th>
                              <th scope="col">birhday</th>
                              <th scope="col">Date</th>
                              <th scope="col">#</th>
                              <th scope="col">#</th>
                              
                            </tr>
                          </thead>
                          <tbody>
                            <% if @users.present? %>
                              <% @users.each do |user| %>
                                
                                <tr>
                                  <td><%= user.id%></td>
                                  <td><%= user.name%></td>
                                  <td><%= user.role%></td>
                                  <td><%= user.status%></td>
                                  <td><%= format_date(user.birthday)%></td>
                                  <td><%= format_date(user.created_at)%></td>
                                  <td><%= form_with url: inactivate_user_path(user), method: :put do |form| %>
                                    <%= form.submit "Deletar" %>
                                  <% end %> </td>
                                  <td><%= form_with url: activate_user_path(user), method: :put do |form| %>
                                    <%= form.submit "Ativar" %>
                                  <% end %> </td>
                                  
                                 
                                  
                                </tr>
                                
                              <% end %>
                            <% end %>
                          </tbody>
                        </table>
                        <% if @users.present? %>
                          <%# <%= paginate @users %>
                        <% end %>
                    </div>
                  </div>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>




